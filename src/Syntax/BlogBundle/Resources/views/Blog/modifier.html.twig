{# src/Syntax/BlogBundle/Resources/views/modifier.html.twig #}

{% extends "SyntaxBlogBundle::layout.html.twig" %}

{% block title %}
	Modifier un article - {{ parent() }}
{% endblock %}

{% block blog_body %}

	<h2>Modifier un article</h2>

	{% include "SyntaxBlogBundle:Blog:formulaire.html.twig" %}

	<p>
		Vous éditez un article déjà existant,
		ne le changez pas trop pour éviter
		aux membres de ne pas comprendre
		ce qu'il se passe.
	</p>

	<p>
		<a href="{{ path('blog_voir', {'id': article.id}) }}" class="btn">
			<i class="icon-chevron-left"></i>
			Retour à l'article
		</a>
	</p>

{% endblock %}